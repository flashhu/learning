<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>
  <body>
    <h4>用户管理</h4>
    <table border="1">
      {{#if users}}
      <tr>
        <th>邮箱</th>
        <th>密码</th>
      </tr>
      {{#each users as |user|}}
      <tr>
        <td>{{user.email}}</td>
        <td>{{user.passwd}}</td>
      </tr>
      {{/each}}
    </table>
    {{/if}}
    {{#if message}}
      <p>{{message}}</p>
    {{/if}}
    <a href="/home">返回</a>
    <a href="/login">登出</a>
  </body>
</html>